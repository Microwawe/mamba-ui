{
	"extends": "./node_modules/gts/tsconfig-google.json",
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@env": ["environments/environment"],
			"@shared/*": ["app/shared/*"],
			"@core/*": ["app/core/*"]
		},
		"outDir": "./dist/out-tsc",
		"sourceMap": false,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"module": "es2020",
		"lib": ["es2018", "dom"]
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
